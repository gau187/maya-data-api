extends layout

block content
 h2.page-header Add Link
 p Add Link
 if errors
  each error, i in errors
   div.alert.alert-danger #{error.msg}
 form(method='post', action='/users/addlink')
  .form-group
   label Link
   input.form-control(name='link', type='text', placeholder='Enter URL')
  .form-group
   label Date
   input.form-control(name='date', type='date', placeholder='Enter Expiry')
  input.btn.btn-primary(type='submit', name='submit',value='Add')