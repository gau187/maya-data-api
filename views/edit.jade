extends layout

block content
 h2.page-header Add Link
 p Add Link
 if errors
  each error, i in errors
   div.alert.alert-danger #{error.msg}
 form(method='post', action='/users/editLink?endpoint=#{data.endpoint}')
  .form-group
   label Link
   input.form-control(name='link', type='text', value='#{data.originalUrl}', placeholder='Enter URL')
  input.btn.btn-primary(type='submit', name='submit',value='Edit')